@{
    ViewData["Title"] = "Carga de Usuarios";
}

<h2>Carga de usuarios desde archivo TXT</h2>

<form asp-action="EnviarArchivo" method="post" enctype="multipart/form-data">
    <div style="margin-bottom: 20px;">
        <label>Seleccionar archivo:</label>
        <input type="file" name="archivo" accept=".txt" required />
    </div>

    <button type="submit" class="btn btn-primary btn-icon" title="Subir archivo">
        <img src="~/img/subir.png" alt="Subir archivo" style="width: 30px; height: 30px;">
    </button>

    @if (ViewBag.Mensaje != null)
    {
        <div style="margin-top:20px; color:green;">
            <strong>@ViewBag.Mensaje</strong>
        </div>
    }
</form>

<style>
    .btn-icon {
        width: 100px;
        height: 100px;
        border-radius: 80%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-icon img {
            max-width: 50%;
            max-height: 50%;
        }
</style>
